{
"description": "block COVID-related content",
"manifest_version": 2,
"name": "NoCovid",
"version": "1.0",
"icons": {
    "48": "icons/logo.png"
},

"applications": {
    "gecko": {
        "id": "borderify@mozilla.org",
        "strict_min_version": "45.0"
    }
},

"permissions": [
    "webRequest",
    "<all_urls>"
],

"background": {
  "scripts": ["background.js"]
 }
 
}